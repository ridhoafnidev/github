<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.dailyapps.githubuser">

<uses-permission android:name="android.permission.INTERNET" />
<permission android:name="com.dailyapps.githubuser.READ_DATABASE" android:protectionLevel="normal"/>
<permission android:name="com.dailyapps.githubuser.WRITE_DATABASE" android:protectionLevel="normal"/>

<application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:usesCleartextTraffic="true"
    android:theme="@style/Theme.GithubUser">
    <activity android:name=".MainActivity"></activity>
    <activity
        android:name=".activity.SplashScreenActivity"
        android:theme="@style/SplashScreenStyle">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <nav-graph android:value="@navigation/main_navigation" />
    </activity>
<!--    <queries>-->
<!--        <package android:name="com.dailyapps.githubuser" />-->
<!--    </queries>-->
    <provider
        android:authorities="com.dailyapps.githubuser"
        android:name="com.dailyapps.githubuser.provider.GithubtProvider"
        android:exported="true"
        android:readPermission="com.dailyapps.githubuser.READ_DATABASE"
        android:writePermission="com.dailyapps.githubuser.WRITE_DATABASE" />

    <receiver
        android:name="com.dailyapps.githubuser.receiver.AlarmReceiver"
        android:exported="true"
        android:enabled="true"></receiver>

</application>
</manifest>
